{{!< default}}
{{#post}}
<header class="page-head {{#if image}}" style="background-image: url({{image}}){{else}}no-cover{{/if}}"></header>
<main class="container">
    <div class="post">
        <section class="content">
            <h1 class="post-title"><a href="{{url}}">{{{title}}}</a></h1>
            {{content}}
        </section>
    </div>
</main>
{{/post}}